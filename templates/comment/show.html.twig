{% extends 'base.html.twig' %}

{% block title %}Comment{% endblock %}

{% block body %}
    <h1>Comment</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ comment.id }}</td>
        </tr>
        <tr>
            <th>Message</th>
            <td>{{ comment.Message }}</td>
        </tr>
        <tr>
            <th>DateTile</th>
            <td>{{ comment.DateTile ? comment.DateTile|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>Up</th>
            <td>{{ comment.up }}</td>
        </tr>
        <tr>
            <th>Down</th>
            <td>{{ comment.down }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('comment_index') }}">back to list</a>

    <a href="{{ path('comment_edit', {'id': comment.id}) }}">edit</a>

    {{ include('comment/_delete_form.html.twig') }}
{% endblock %}
