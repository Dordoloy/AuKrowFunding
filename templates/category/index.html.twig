{% extends 'base.html.twig' %}

{% block title %}{% trans %}Category index{% endtrans %}{% endblock %}

{% block body %}
    <h1>{% trans %}Category index{% endtrans %}</h1>

    <table class="table">
        <thead>
        <tr>
            <th>{% trans %}Name{% endtrans %}</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.Name }}</td>
                <td>
                    <a href="{{ path('category_show', {'id': category.id}) }}">{% trans %}show{% endtrans %}</a>
                    <a href="{{ path('category_edit', {'id': category.id}) }}">{% trans %}edit{% endtrans %}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">{% trans %}no records found{% endtrans %}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('category_new') }}">{% trans %}Create new{% endtrans %}</a>
{% endblock %}
