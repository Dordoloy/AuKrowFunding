{% extends 'base.html.twig' %}

{% block title %}Donation index{% endblock %}

{% block body %}
    <h1>Donation index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Amount</th>
            <th>DateTime</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for donation in donations %}
            <tr>
                <td>{{ donation.id }}</td>
                <td>{{ donation.Amount }}</td>
                <td>{{ donation.DateTime ? donation.DateTime|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('donation_show', {'id': donation.id}) }}">show</a>
                    <a href="{{ path('donation_edit', {'id': donation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('donation_new') }}">Create new</a>
{% endblock %}
